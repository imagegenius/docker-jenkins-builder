                docker manifest create ${GITHUBIMAGE}:{{ release_tag }} ${GITHUBIMAGE}:amd64-{{ release_tag }} {% if build_armhf %}${GITHUBIMAGE}:arm32v7-{{ release_tag }} {% endif %}${GITHUBIMAGE}:arm64v8-{{ release_tag }}
